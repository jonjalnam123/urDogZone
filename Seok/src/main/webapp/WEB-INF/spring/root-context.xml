	<bean id="dataSourceSpied" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3307/urDogZone?serverTimezone=Asia/Seoul&amp;characterEncoding=UTF-8&amp;useSSL=false" />
		<property name="username" value="root" />
		<property name="password" value="root1234" />
	</bean>
	
	<!-- 마이바티스 로그 객체 설정 -->
	<bean id="dataSource" class="net.sf.log4jdbc.Log4jdbcProxyDataSource">
		<!-- 프록시 대상 DB의 DataSource 적용하기 -->
		<!-- 	-> 원본 DB 정보 -->
		<constructor-arg ref="dataSourceSpied" />
		
		<!-- 로그 출력 서식(포맷) 설정하기 -->
		<property name="logFormatter">
			<bean class="net.sf.log4jdbc.tools.Log4JdbcCustomFormatter">
				<property name="loggingType" value="MULTI_LINE" />
				<property name="sqlPrefix" value="SQL:::" />
			</bean>
		</property>
	</bean>
	
	<!-- 마이바티스 수행 객체 설정 (SqlSession) -->
	<bean id="SqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
	
		<!-- dataSource 스프링빈으로 설정한 DB정보 입력하기 -->
		<property name="dataSource" ref="dataSource" />
		
		<!-- 마이바티스 설정파일(XML)의 위치 지정하기 -->
		<property name="configLocation" value="classpath:/mybatis-config.xml" />
		
		
		<!-- Mapper XML 파일의 위치 설정하기 -->
		<property name="mapperLocations" >
			<array>
				<value>classpath:/web/sample/dao/**/*Mapper.xml</value>
				<value>classpath:/web/main/dao/**/*Mapper.xml</value>
				<value>classpath:/web/login/dao/**/*Mapper.xml</value>
				<value>classpath:/web/volunteer/dao/**/*Mapper.xml</value>
				<value>classpath:/web/admlogin/dao/**/*Mapper.xml</value>
				<value>classpath:/web/comm/dao/**/*Mapper.xml</value>
			</array>
		</property>
	</bean>
	
	<!-- 마이바티스를 이용하는 인터페이스 설정(DAO 설정) -->
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="web.sample.dao, web.main.dao, web.login.dao, web.volunteer.dao, web.admlogin.dao, web.comm.dao" />
	</bean>
	
	<!-- 트랜잭션 매니저 빈 설정 -->
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

